# Petals Environment Configuration
# Copy this file to .env in the root directory and fill in your actual values

# ====================
# SUPABASE CONFIGURATION
# ====================

# Supabase Project URL (REQUIRED)
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Service Role Key - For server-side operations (REQUIRED)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Supabase Anonymous Key - For client-side operations (REQUIRED)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase JWT Secret - For verifying JWTs (REQUIRED)
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ====================
# CLERK AUTHENTICATION
# ====================

# Clerk Publishable Key - For frontend authentication (REQUIRED)
CLERK_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Clerk Secret Key - For backend authentication (REQUIRED)
CLERK_SECRET_KEY=sk_test_your-secret-key

# Clerk API URL - For development (OPTIONAL)
CLERK_API_URL=https://api.clerk.dev

# Clerk JWKS URL - For JWT verification (REQUIRED)
CLERK_JWKS_URL=https://your-app.clerk.accounts.dev/.well-known/jwks.json

# ====================
# MOBILE APPLICATION
# ====================

# Expo Project ID (REQUIRED for EAS)
EXPO_PROJECT_ID=your-expo-project-id

# App Display Name (OPTIONAL)
APP_DISPLAY_NAME=Petals

# App Scheme for deep linking (OPTIONAL)
APP_SCHEME=petals

# API Base URL for mobile client (REQUIRED)
API_BASE_URL=https://api.yourdomain.com

# ====================
# BACKEND SERVER
# ====================

# Server Port (OPTIONAL, default: 3001)
PORT=3001

# Node Environment (REQUIRED)
NODE_ENV=development

# CORS Origins - Comma-separated allowed origins (REQUIRED)
CORS_ORIGINS=http://localhost:3000,https://yourapp.com

# JWT Secret for internal tokens (REQUIRED)
JWT_SECRET=your-internal-jwt-secret

# ====================
# FEATURE FLAGS & CONFIG
# ====================

# Enable Realtime Features (OPTIONAL, default: true)
ENABLE_REALTIME=true

# Enable AI Matching (OPTIONAL, default: false)
ENABLE_AI_MATCHING=false

# Max File Upload Size in MB (OPTIONAL, default: 10)
MAX_FILE_UPLOAD_SIZE=10

# Rate Limit Requests per Minute (OPTIONAL, default: 100)
RATE_LIMIT_REQUESTS=100

# ====================
# EXTERNAL SERVICES
# ====================

# Sentry DSN for error tracking (OPTIONAL)
SENTRY_DSN=your-sentry-dsn

# Analytics Service Key (OPTIONAL)
ANALYTICS_KEY=your-analytics-key

# Push Notification Service Key (OPTIONAL)
PUSH_NOTIFICATION_KEY=your-push-key

# ====================
# DEVELOPMENT ONLY
# ====================

# Enable Debug Logging (OPTIONAL, default: false)
DEBUG=false

# Database SSL Mode (OPTIONAL for development)
DB_SSL_MODE=prefer
